{
  "name": "cv-website",
  "version": "1.0.0",
  "description": "Personal CV website with Cloudflare Pages deployment",
  "scripts": {
    "build": "npm run minify:html && npm run minify:css && npm run minify:js",
    "minify:html": "html-minifier-terser --input-dir . --output-dir dist --file-ext html --minify-js --minify-css --remove-comments --collapse-whitespace --remove-redundant-attributes --remove-script-type-attributes --remove-style-link-type-attributes --use-short-doctype --minify-urls",
    "minify:css": "cleancss -o dist/styles.css styles.css",
    "minify:js": "terser script.js -o dist/script.js --compress --mangle",
    "copy:assets": "cp *.pdf dist/ && cp -r favicons dist/",
    "prebuild": "mkdir -p dist && npm run copy:assets"
  },
  "devDependencies": {
    "html-minifier-terser": "^7.2.0",
    "clean-css-cli": "^5.6.2",
    "terser": "^5.24.0"
  },
  "keywords": [
    "cv",
    "portfolio",
    "website",
    "cloudflare-pages"
  ],
  "author": "Tai Lay",
  "license": "MIT"
}
